commands:
  00_remove_nginx:
    command: "sudo service nginx stop && sudo chkconfig nginx off && sudo yum remove nginx"
  01_install_nginx_plus:
    command: "cd /tmp && sudo rpm -i nginx-plus-23-1.amzn2.ngx.x86_64.rpm"
  02_install_nginx_plus_module_njs:
    command: "cd /tmp && sudo rpm -i nginx-plus-module-njs-23-0.5.0-1.amzn2.ngx.x86_64.rpm"
  04_restart_nginx:
    command: "sudo chkconfig nginx on && sudo service nginx start"